# Backend Environment Variables
# Copy this file to .env and fill in the values

# Server Configuration
PORT=8080
NODE_ENV="development"

# Database
# Get a PostgreSQL connection string from Neon (https://neon.tech)
DATABASE_URL="postgresql://username:password@host/database"

# Authentication
# Generate a strong random string for JWT signing
JWT_SECRET="your-strong-secret-key"

# URLs
# FRONTEND_URL: Where your frontend is hosted
# BACKEND_URL: Where your backend is hosted (used by widget)
#
# NOTE: When deployed on Render, BACKEND_URL is auto-detected via RENDER_EXTERNAL_URL
# You only need to set BACKEND_URL if using a custom domain
#
# Development:
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:8080"

# Google Gemini API Key (for AI sentiment analysis)
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY="your-gemini-api-key"

# Google OAuth Client ID (for Google Sign-in)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
